<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.AdminCategoryActivity"
    tools:ignore="ExtraText">

    <TextView
        android:id="@+id/slogan_space"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="@string/add_new_product"
        android:textAlignment="center"
        android:textSize="26sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:id="@+id/linear_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slogan_space"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/t_shirts"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/tshirt"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/dresses"
            android:layout_width="100dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/dress"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/trousers"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/jeans"
            tools:ignore="ContentDescription" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_category2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/linear_category"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp">
        <ImageView
            android:id="@+id/sweaters"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/sweaters"
            tools:ignore="ContentDescription"/>

        <ImageView
            android:id="@+id/kidswear"
            android:layout_width="100dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/kids"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/shirts"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/shirts"
            tools:ignore="ContentDescription"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_category3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/linear_category2"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/hoodies"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            app:srcCompat="@drawable/hoodies"
            tools:ignore="ContentDescription"/>

    </LinearLayout>

    <Button
        android:id="@+id/maintain"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_above="@id/check_orders"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="140dp"
        android:padding="10dp"
        android:text="@string/maintain_products"
        android:textColor="@color/black"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/check_orders"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_above="@id/admin_logout_orders"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="80dp"
        android:padding="10dp"
        android:text="@string/check_new_orders"
        android:textColor="@color/black"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/admin_logout_orders"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        android:padding="10dp"
        android:text="@string/logout"
        android:textColor="@color/black"
        android:textSize="16sp"
        />

</RelativeLayout>